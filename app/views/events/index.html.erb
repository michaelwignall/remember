<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table width="100%">
  <tr>
    <td width="50%">
      <%= month_calendar events: @events do |date, events| %>
        <%= date.strftime('%e') %>

        <% events.each do |event| %>
          <div>
            <%= link_to event, class: 'show-event' do %>
              <%= event.title %>
            <% end %>
          </div>
        <% end %>

        <%= link_to '+', new_event_path(start_time: date), class: 'new-event' %>
      <% end %>
    </td>
    <td>
      <ul class="categories">
        <li>
          <%= link_to 'All', events_path %>
        </li>
        <% @categories.each do |category| %>
          <li>
            <%= link_to events_path(category: category.slug) do %>
              <%= category.title %>
            <% end %>
          </li>
        <% end %>
      </ul>

      <table width="100%">
        <thead>
          <tr>
            <th>Title</th>
            <th>Start time</th>
            <th>End time</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.title %></td>
              <td><%= event.start_time.to_formatted_s(:short) %></td>
              <td><%= event.end_time.to_formatted_s(:short) %></td>
              <td><%= link_to 'Edit', edit_event_path(event) %></td>
              <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </td>
  </tr>
</table>
